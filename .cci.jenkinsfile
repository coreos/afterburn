// Documentation: https://github.com/coreos/coreos-ci/blob/master/README-upstream-ci.md

buildPod {
    checkout scm
    stage("Build") {
        shwrap("make && make install DESTDIR=install")
        stash name: 'build', includes: 'install/**'
    }
}

cosaPod {
    unstash name: 'build'
    fcosBuild(overlays: ["install"])
}
